<script type="text/ng-template" id="portfolioModal.html">
    <div class="modal-header">
        <h3 class="modal-title">Add Portfolio</h3>
    </div>
    <div class="modal-body">
        <form id="portfolioForm" name="portfolioForm" class="form-horizontal" ng-submit="save(portfolioForm.$valid)">
            <div class="form-group">
                <label id="title" class="control-label col-sm-1">Title:</label>
                <div class="col-sm-4">
                    <input type="text" name="title" class="form-control" ng-model="portfolio.title" placeholder="Title" required/>
                </div>
            </div>
            <div class="form-group">
                <label id="email" class="control-label col-sm-1">Email:</label>
                <div class="col-sm-4">
                    <input name="email" type="email" class="form-control col-sm-4" ng-model="portfolio.email" placeholder="Email" required/>
                </div>
            </div>
        </form>

        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Cusip</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="record in portfolio.list">
                    <td><input type="text" ng-model="record.cusip" placeholder="Input Cusip"/></td>
                    <td><input type="text" ng-model="record.quantity" placeholder="Input Quantity"/></td>
                    <td><input type="text" ng-model="record.price" placeholder="Input Price"/></td>
                    <td><button class="btn btn-danger btn-sm" ng-click="delPortfolio($index)">Del</button></td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-primary" ng-click="addPortfolio()">Add Portfolio</button>
    </div>
    <div class="modal-footer">
        <button form="portfolioForm" type="submit" class="btn btn-success">Save</button>
        <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>
</script>

<!--File upload Modal -->
<script type="text/ng-template" id="fileUpload.html">
    <div class="modal-header">
        <h3 class="modal-title">File Upload</h3>
    </div>
    <div class="modal-body">
        <div class="row">

            <div class="col-md-3">

                <h4>Select files</h4>

                <!-- Example: nv-file-select="" uploader="{Object}" options="{Object}" filters="{String}" -->
                <!--Multiple-->
                <input type="file" nv-file-select="" uploader="uploader"/><br/>

                <h4>Portfolio Title</h4>
                <input type="text" ng-model="title" placeholder="Input portfolio title"/>
                <!--Single-->
                <!--<input type="file" nv-file-select="" uploader="uploader" />-->
                <!--<h4>Status</h4>-->
                <!--<div class="btn-group">-->
                <!--<label class="btn btn-primary" ng-model="radioModel" uib-btn-radio="'public'">Public</label>-->
                <!--<label class="btn btn-primary" ng-model="radioModel" uib-btn-radio="'private'">Private</label>-->
                <!--</div>-->
            </div>

            <div class="col-md-9" style="margin-bottom: 40px">

                <h3>Upload queue</h3>
                <p>Queue length: {{ uploader.queue.length }}</p>

                <table class="table">
                    <thead>
                    <tr>
                        <th width="50%">Name</th>
                        <th ng-show="uploader.isHTML5">Size</th>
                        <th ng-show="uploader.isHTML5">Progress</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="item in uploader.queue">
                        <td><strong>{{ item.file.name }}</strong></td>
                        <td ng-show="uploader.isHTML5" nowrap>{{ item.file.size/1024/1024|number:2 }} MB</td>
                        <td ng-show="uploader.isHTML5">
                            <div class="progress" style="margin-bottom: 0;">
                                <div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span ng-show="item.isSuccess"><i class="glyphicon glyphicon-ok"></i></span>
                            <span ng-show="item.isCancel"><i class="glyphicon glyphicon-ban-circle"></i></span>
                            <span ng-show="item.isError"><i class="glyphicon glyphicon-remove"></i></span>
                        </td>
                        <td nowrap>
                            <button type="button" class="btn btn-success btn-xs" ng-click="item.upload()" ng-disabled="item.isReady || item.isUploading || item.isSuccess">
                                <span class="glyphicon glyphicon-upload"></span> Upload
                            </button>
                            <button type="button" class="btn btn-warning btn-xs" ng-click="item.cancel()" ng-disabled="!item.isUploading">
                                <span class="glyphicon glyphicon-ban-circle"></span> Cancel
                            </button>
                            <button type="button" class="btn btn-danger btn-xs" ng-click="item.remove()">
                                <span class="glyphicon glyphicon-trash"></span> Remove
                            </button>
                        </td>
                    </tr>
                    </tbody>
                </table>

                <div>
                    <div>
                        Queue progress:
                        <div class="progress" style="">
                            <div class="progress-bar" role="progressbar" ng-style="{ 'width': uploader.progress + '%' }"></div>
                        </div>
                    </div>
                </div>

            </div>

        </div>


    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" type="button" ng-click="cancel()">Close</button>
    </div>
</script>

<script type="text/ng-template" id="portfolioDetail.html">
        <div class="modal-header">
            <form name="detailForm" editable-form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-1">Title:</label>
                    <div class="col-sm-4">
                        <span e-name="title" editable-text="portfolio.title" e-required>{{portfolio.title||'empty'}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-1">Email:</label>
                    <div class="col-sm-4">
                        <span e-name="email" editable-email="portfolio.email" e-required>{{portfolio.email||'xxx@xxx.com'}}</span>
                    </div>
                </div>
                <div class="buttons">
                    <button class="btn btn-default" ng-click="detailForm.$show()" ng-show="!detailForm.$visible">
                        Edit
                    </button>
                    <span ng-show="detailForm.$visible">
                        <button type="submit" class="btn btn-primary" ng-disabled="detailForm.$waiting">
                            Save
                        </button>
                        <button type="button" class="btn btn-default" ng-disabled="detailForm.$waiting" ng-click="detailForm.$cancel()">
                            Cancel
                        </button>
                    </span>
                </div>
            </form>
        </div>
        <div class="modal-body">
            <table class="table table-bordered table-hover table-condensed">
                <tr style="font-weight: bold;">
                    <td style="width:30%;">Cusip</td>
                    <td style="width:30%;">Quantity</td>
                    <td style="width:25%;">Price</td>
                    <td style="width:20%;">Edit</td>
                </tr>
                <tr ng-repeat="record in portfolio.list">
                    <td><span editable-text="record.cusip" e-form="rowform">{{record.cusip || 'empty'}}</span></td>
                    <td><span editable-text="record.quantity" e-form="rowform">{{record.quantity || 'empty'}}</span></td>
                    <td><span editable-text="record.price" e-form="rowform">{{record.price || 'empty'}}</span></td>
                    <td style="white-space:nowrap;">
                        <form editable-form name="rowform" class="form-buttons form-inline" ng-show="rowform.$visible">
                            <button type="submit" class="btn btn-primary" ng-disabled="rowform.$waiting">save</button>
                            <button type="button" class="btn btn-warning" ng-disabled="rowform.$waiting" ng-click="rowform.$cancel()">cancel</button>
                        </form>
                        <div class="buttons" ng-show="!rowform.$visible">
                            <button type="button" class="btn btn-primary" ng-click="rowform.$show()">edit</button>
                            <button type="button" class="btn btn-danger" ng-click="delPortfolio($index)">Del</button>
                        </div>
                    </td>
                </tr>
            </table>
            <button class="btn btn-default" ng-click="addPortfolio()">Add Portfolio</button>
        </div>
        <div class="modal-footer">
                <button class="btn btn-success" ng-click="updatePortfolio(detailForm.$valid)">Save</button>
                <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
</script>